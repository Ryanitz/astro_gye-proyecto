---
export interface Props {
  title: string;
  description: string;
  link: string;
  goal: number;
  amount_raised: number;
  status: "not_started" | "in_progress" | "completed";
  image: string;
}

const { title, description, link, goal, amount_raised, status, image } =
  Astro.props;
  
const progress = Math.min(Math.round((amount_raised / goal) * 100), 100);

const statusConfig = {
  not_started: {
    text: "Sin iniciar",
    classes: "bg-gray-100 text-gray-800 border-gray-200",
  },
  in_progress: {
    text: "En progreso",
    classes: "bg-blue-100 text-blue-800 border-blue-200",
  },
  completed: {
    text: "Finalizada",
    classes: "bg-green-100 text-green-800 border-green-200",
  },
};

const { text, classes } = statusConfig[status];
---

<div class="w-full bg-white rounded-2xl shadow-lg hover:shadow-2xl transition-shadow duration-300 transform hover:-translate-y-1">
  <div class="relative h-56 overflow-hidden rounded-t-2xl">
    <img src={image} alt={title} class="object-cover w-full h-full transition-transform duration-500 hover:scale-110"/>
    <div class="absolute inset-0 bg-gradient-to-t from-black/70 to-transparent"></div>
  </div>

  <div class="p-6">
    <div class="flex flex-col mb-4">
      <h2 class="text-2xl font-bold text-gray-900 mb-2">{title}</h2>
      <span class={`self-start inline-flex items-center rounded-full px-3 py-1 text-sm font-medium border ${classes}`}>
        {text}
      </span>
    </div>

    <p class="text-gray-600 mb-6">{description}</p>

    <div class="flex items-center justify-between mb-4">
      <div>
        <p class="text-3xl font-bold text-blue-600">${amount_raised.toLocaleString()}</p>
        <span class="text-sm text-green-600 font-semibold">{progress}% del objetivo</span>
      </div>
      <div class="flex items-center gap-2">
        <span class="ml-2 text-yellow-500 text-xl">üèÜ</span>
        <span class="text-sm text-gray-600 font-medium">Meta: ${goal.toLocaleString()}</span>
      </div>
    </div>

    <div class="w-full bg-gray-200 rounded-full h-2.5 mb-6">
      <div class="bg-blue-600 h-2.5 rounded-full transition-all duration-500" style={`width: ${progress}%`}></div>
    </div>

    <a href={link} class="block bg-blue-600 text-white text-center py-3 px-4 rounded-lg hover:bg-blue-700 transition-transform duration-300 hover:scale-105 text-lg font-semibold">
      Ver m√°s
    </a>
  </div>
</div>
